<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/theme_app"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:elevation="10dp"
            android:src="@drawable/ic_baseline_dark_mode_24"
            app:tint="@color/temp" />


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_2"
        android:background="@drawable/round_ll"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_input_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="3"
            android:paddingEnd="20dp"
            android:textColor="@color/second"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_input_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:scrollHorizontally="true"
            android:textColor="@color/temp"
            android:textSize="70sp" />
    </LinearLayout>


    <LinearLayout
